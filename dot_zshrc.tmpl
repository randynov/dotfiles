    autoload -Uz vcs_info
    
    # Function to get current time
    get_time() {
        echo "%F{magenta}[%D{%H:%M:%S}]%f"
    }
    
    # Function to show exit code if non-zero
    get_exit_code() {
        echo "%(?..%F{red}[%?]%f )"
    }
    
    # Function to show background jobs
    get_jobs() {
        echo "%(1j.%F{yellow}[jobs:%j]%f .)"
    }
    
    # Function to get node/python version if in project
