# ================================================
# FUNCTIONS
# ================================================

# Update all ollama models
pull_ollama() {
    echo "üìã Listing installed ollama models..."
    ollama list
    echo ""
    
    echo "üîÑ Updating all models..."
    local models=$(ollama list | tail -n +2 | awk '{print $1}' | grep -v '^$')
    
    if [ -z "$models" ]; then
        echo "‚ùå No models found to update"
        return 1
    fi
    
    local count=0
    local total=$(echo "$models" | wc -l | tr -d ' ')
    
    echo "$models" | while read -r model; do
        if [ -n "$model" ]; then
            count=$((count + 1))
            echo ""
            echo "üîÑ [$count/$total] Updating: $model"
            ollama pull "$model"
            echo "‚úÖ Completed: $model"
        fi
    done
    
    echo ""
    echo "üéâ All ollama models updated successfully!"
}

