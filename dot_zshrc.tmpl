        fi
        echo "$versions"
    }
    
    precmd() { 
        vcs_info
        # Update window title with current directory
        print -Pn "\e]0;%n@%m: %~\a"
    }
    
    zstyle ':vcs_info:git:*' formats '%F{green}git:%b%f%F{yellow}%u%c%f'
    zstyle ':vcs_info:git:*' actionformats '%F{green}git:%b%f%F{red}(%a)%f%F{yellow}%u%c%f'
    zstyle ':vcs_info:git:*' check-for-changes true
    zstyle ':vcs_info:git:*' stagedstr '+'
    zstyle ':vcs_info:git:*' unstagedstr 'M'
    
    setopt prompt_subst
    
    # Multi-line prompt with comprehensive info
    PROMPT='$(get_time) $(get_exit_code)%F{blue}%n@%m%f:%F{cyan}%~%f $(get_versions)${vcs_info_msg_0_} $(get_jobs)
%F{green}â¯%f '
